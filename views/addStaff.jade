extends layout

block content

	div(class='container')
		div(class="page-header")
			h1 Staff Registration
		form(class="form-horizontal",method="POST")
			div(class="panel panel-default")
				div(class="panel-heading")
					h2(class='panel-title') Account Information
				div(class="panel-body")
					div(class="form-group")
						label(for="username",class="control-label") Username
						input(type="text",class="form-control,col-sm-4",name="username",placeholder="")
					div(class="form-group")
						label(for="password",class="control-label") Password
						input(type="password",class="form-control,col-sm-4",name="password",placeholder="")
					div(class="form-group")
						label(for="passwordconfirm",class="control-label") Password Confirmation
						input(type="password",class="form-control,col-sm-4",name="passwordconfirm",placeholder="")
					div(class="form-group")
						label(for="passwordconfirm",class="control-label") Account Privilege
							label
								input(type="radio-inline",name="optionsRadios",value="admin",checked='true') 
								p Administrator
							label
								input(type="radio-inline",name="optionsRadios",value="staff") 
								p Staff

			div(class="panel panel-default")
				div(class="panel-heading")
					h2(class='panel-title') Personal Profile
				div(class="panel-body")
					div(class="form-group")
						label(for="name",class="control-label") Name
						input(type="text",class="form-control,,col-sm-4",name="realname",placeholder="")
					div(class="form-group")
						label(for="remarks",class="control-label") Remarks
						textarea(class="form-control,,col-sm-4",rows="3", name="remarks")

			button(type="submit",class="btn btn-default",value="Submit") Submit