				});
				*/
			});

		style.
			
		
		div(class='navbar navbar-inverse navbar-fixed-top')
					div(class='container-fluid')
						div(class='navbar-header')
							button(type='button',class='navbar-toggle collapsed',data-toggle='collapse',data-target='#navbar')
								span(class='sr-only') Toggle navigation
								span(class='icon-bar')
								span(class='icon-bar')
								span(class='icon-bar')
							a(class='navbar-brand' href='/') Autovacstore

						div(class='collapse navbar-collapse',id='navbar')
							ul(class='nav navbar-nav navbar-right')
								li
									a(id='menu-toggle') Toggle TEST
								li
									a(href='/settings') Settings
								li
									a(href='/auth/logout') Logout

		div(id='collapse-btn')
			a(class="btn-floating btn-large waves-effect waves-light orange lighten-2")
				i(class="mdi-content-add")

		div(id="wrapper")
			div(id="sidebar-wrapper")
				
				div(class='container-fluid')
					div(class='row')
						div(class="col-sm-3 col-md-2 sidebar")
							ul(class="nav nav-sidebar")
								//==============================
								if page == 'overview'
									li(class="active")
										a(href="/") Overview 
								else 
									li
										a(href="/") Overview 
								//==============================
								if page == 'addorder'
									li(class="active")
										a(href="/addorder") Add Order
								else
									li
										a(href="/addorder") Add Order
								//==============================
								if page == 'undelivered'
									li(class="active")
										a(href="/undelivered") Undelivered
								else
									li
										a(href="/undelivered") Undelivered
								//==============================
								if page == 'delivered'
									li(class="active")
										a(href="/delivered") Delivered
								else	
									li
										a(href="/delivered") Delivered
								//==============================
								if page == 'staff'
									li(class="active")
										a(href="/staff") Staff
								else
									li
										a(href="/staff") Staff
								//==============================
								if page == 'products'
									li(class="active")
										a(href="/product") Products	
								else
									li
										a(href="/product") Products	
										span(class="sr-only") (Current)

			div(id="page-content-wrapper")
				div(id='div-content' class="container-fluid")
					block content
				//div(class="col-sm-9 col-md-10 main")
					block content

		



