		meta(name="viewport",content="width=device-width, initial-scale=1")
	body
		script.
			$(document).ready(function(err) {
				
				$("#menu-toggle").click(function(e) {
					e.preventDefault();
					$("#wrapper").toggleClass("toggled");
					$("#collapse-btn").toggleClass("toggled");
					
					$("#div-content").attr('class','col-sm-9 col-md-10 main');
				});
		
				$("#collapse-btn").click(function(e) {
					e.preventDefault();
					$("#wrapper").toggleClass("toggled");
					$("#collapse-btn").toggleClass("toggled");
					$("#div-content").attr('class','col-sm-9 col-md-10 main');
				});

				
				/*
