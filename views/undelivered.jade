extends layout

block content

	div(class='tab-content' id='myTabContent')
		div(class='container-fluid')
			div(role='tabpanel',class='tab-pane fade active in',id='orders',aria-labelledby='orders-tab')
				table(class='table table-striped')
					thead
						tr
							th ID/Tracking Code
							th Status
							th Product(s)
							th Total(SGD$)
							th Customer
							th Delivery
							th Operations
					tbody
						if result
							- for (var i=0; i<result.length; i++)
								tr
									th(scope='row')= result[i]['order_id'] + '/' + result[i]['tracking_id']
									if (result[i]['status']=='r')
										th
											span(class="label label-warning") Undelivered
									if (result[i]['status']=='p')
										th
											span(class="label label-info") Delivering	
									td= result[i]['items']
									td= '$ ' + result[i]['total']
									td= result[i]['customer']
									td= result[i]['staff']
									td
										//button(type="button",class="btn btn-default",aria-label="Left Align")
										span(class="glyphicon glyphicon-pencil",aria-hidden="true")
										span(class="glyphicon glyphicon-indent-left",style='margin-left: 10px;',aria-hidden="true")
										span(class="glyphicon glyphicon-remove",style='margin-left: 10px;',aria-hidden="true")

						else
							th(scope='row') NO UNDELIVERED ORDER

			div(role='tabpanel',class='tab-pane fade',id='staffs')
				p This is staff page.
			div(role='tabpanel',class='tab-pane fade',id='invoices')
				p This is invoice page.

	//
		script(type='text/javascript')
		$(function () {$('#myTab a:last').tab('show')})


