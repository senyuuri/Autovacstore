doctype html
html
	head
		title= title
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
		link(rel='stylesheet' href='http://getbootstrap.com/examples/dashboard/dashboard.css')
		//link(rel='stylesheet' href='/styles/sidebar.css')
		script(src="https://code.jquery.com/jquery-2.1.4.min.js")
		script(src="http://cdn.bootcss.com/bootstrap/3.3.2/js/bootstrap.min.js")
		meta(name="viewport",content="width=device-width, initial-scale=1")
		script(type='text/javascript').

			$(document).ready(function(err) {

				$(document).on('click','.label-warning',function(){
					$(this).attr('class','label label-primary');
					$(this).text('Delivering');
					var index = $(this).attr('clickindex');
					window.location.replace("/postman/s/"+index+'/'+'p');
				});

				$(document).on('click','.label-primary',function(){
					$(this).attr('class','label label-success');
					$(this).text('Success');
					var index = $(this).attr('clickindex');
					window.location.replace("/postman/s/"+index+'/'+'s');
				});
			});

	body
		div(class='navbar navbar-inverse navbar-fixed-top')
			div(class='container-fluid')
				div(class='navbar-header')
					button(type='button',class='navbar-toggle collapsed',data-toggle='collapse',data-target='#navbar')
						span(class='sr-only') Toggle navigation
						span(class='icon-bar')
						span(class='icon-bar')
						span(class='icon-bar')
					a(class='navbar-brand' href='/') Autovacstore
				div(class='collapse navbar-collapse',id='navbar')
					ul(class='nav navbar-nav navbar-right')
						li
							a(href='/settings') Settings
						li
							a(href='/auth/logout') Logout
					form(class='navbar-form navbar-right')
						input(type="text",class="form-control",placeholder="Search...")

	body
		if message.length>0
			if (message == 'Status updated.')
				div(class="alert alert-success")= message
			else
				div(class="alert alert-danger")= message


		div(class='tab-content' id='myTabContent')
		div(class='container-fluid')
			div(role='tabpanel',class='tab-pane fade active in',id='orders',aria-labelledby='orders-tab')
				table(class='table table-striped')
					thead
						tr
							th Status
							th ID/Tracking Code
							th Product(s)
							th Total(SGD$)
							th Customer
							th Delivery
							th Operations
					tbody
						if result.length != 0
							- for (var i=0; i<result.length; i++)
								tr
									if (result[i]['status']=='s')
										th
											span(class="label label-success",clickindex=result[i]['order_id']) Delivered
									if (result[i]['status']=='r')
										th
											span(class="label label-warning",clickindex=result[i]['order_id']) Undelivered
									if (result[i]['status']=='p')
										th
											span(class="label label-primary",clickindex=result[i]['order_id']) Delivering
									th(scope='row')= result[i]['order_id'] + '/' + result[i]['tracking_id']
									td= result[i]['items']
									td= '$ ' + result[i]['total']
									td= result[i]['customer']
									td= result[i]['staff']
									td
										//button(type="button",class="btn btn-default",aria-label="Left Align")
										span(class="glyphicon glyphicon-pencil edit",aria-hidden="true",clickindex=result[i]['order_id'])
										span(class="glyphicon glyphicon-indent-left invoice",style='margin-left: 10px;',aria-hidden="true",clickindex=result[i]['order_id'])
										span(class="glyphicon glyphicon-remove delete",style='margin-left: 10px;',aria-hidden="true",clickindex=result[i]['order_id'])
						else
							th(scope='row') NO DELIVERED ORDER